---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "erickvega.xyz",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="stylesheet" href="https://use.typekit.net/vmj5cem.css" />
    <link rel="stylesheet" href="https://use.typekit.net/lxi6dzv.css" />
    <link rel="stylesheet" href="https://use.typekit.net/ers5eht.css" />
  </head>
  <body>
    <slot />
  </body>
</html>
